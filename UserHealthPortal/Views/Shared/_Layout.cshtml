                <li class="liStyle" style=""><a href="~/MainPage/LogOut">Logout</a></li>
                <li id="imageItem" style="position:absolute;left:94.5%"><img src="@Session["imgURL"]" , item.ModelImagePath))" style="border-radius:50px;width:65px;height:70px" /></li>
            </ul>
        </div>
    </nav>
    <script>
        window.onscroll = function () {
            myFunction();
        };
        var navbar = document.getElementById("navbar");
        var sticky = navbar.offsetTop;

        function myFunction() {
            if (window.pageYOffset >= sticky) {
                navbar.classList.add("sticky");
            }
            else {
                navbar.classList.remove("sticky");
            }
        }
    </script>


    <div class="container body-content">
