<body>
    <nav  class="navbar navbar-default" style="height:80px">
        <div id="navbar" class="container-fluid innerDiv">
            <ul class="nav navbar-nav">
                <li class="liStyle"><a href="~/MainPage/UserDashBoard">Profile</a></li>
                <li class="liStyle"><a href="~/Hospital/Index">Hospital</a></li>
